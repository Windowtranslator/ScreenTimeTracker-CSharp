<Window x:Class="ScreenTimeTracker_CSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenTimeTracker_CSharp"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <!-- チェックボックスの見た目を定義するカスタムスタイル -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#abb2bf"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal">
                            <!-- チェックボックスの「四角」部分 -->
                            <Border x:Name="CheckBoxBorder"
                                    Width="18" Height="18"
                                    BorderBrush="#5c6370"
                                    Background="Transparent"
                                    BorderThickness="2"
                                    CornerRadius="3">
                                <!-- チェックマークの形 -->
                                <Path x:Name="CheckMark"
                                      Data="M4,8 L7,11 L12,5"
                                      Stroke="#d8dee9"
                                      StrokeThickness="2.5"
                                      Visibility="Collapsed"
                                      Stretch="Fill" 
                                      Margin="2"/>
                            </Border>
                            <!-- "PC起動時に..." のテキスト部分 -->
                            <ContentPresenter Margin="8,0,0,0"
                                              VerticalAlignment="Center"
                                              Content="{TemplateBinding Content}"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <!-- チェックが入った時の見た目の変化 -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckBoxBorder" Property="Background" Value="#61afef"/>
                                <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#61afef"/>
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <!-- マウスが乗った時の見た目の変化 -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#abb2bf"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Background="#282c34">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- ナビゲーション -->
            <RowDefinition Height="2*"/>
            <!-- 棒グラフ -->
            <RowDefinition Height="Auto"/>
            <!-- "詳細データ"ラベル -->
            <RowDefinition Height="3*"/>
            <!-- 詳細エリア (円グラフとリスト) -->
        </Grid.RowDefinitions>

        <!-- 月間ナビゲーションUI (まだ機能はしません) -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,5">
            <Button x:Name="PrevMonthButton" Content="◀" Padding="10,5" Margin="0,0,5,0" Click="PrevMonthButton_Click"/>
            <ComboBox x:Name="MonthSelectorComboBox" Width="150" Margin="0,0,5,0" SelectionChanged="MonthSelectorComboBox_SelectionChanged"/>
            <Button x:Name="NextMonthButton" Content="▶" Padding="10,5" Click="NextMonthButton_Click"/>
        </StackPanel>
        
        <!-- 棒グラフ -->
        <lvc:CartesianChart Grid.Row="1" Margin="10,0,10,10"
                        x:Name="BarChart"
                        DataPointerDown="BarChart_DataPointerDown"/>

        <!-- "詳細データ" ラベル -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock x:Name="DetailsLabel" Text="詳細データ: 2025-09-03" Foreground="#d8dee9"
               FontSize="20" FontWeight="Bold" Margin="10,10,10,5"/>
            <CheckBox x:Name="StartupCheckBox" Content="PC起動時に自動実行する" 
              VerticalAlignment="Center" Margin="20,0,0,0"
              Checked="StartupCheckBox_Changed" Unchecked="StartupCheckBox_Changed"/>
        </StackPanel>

        <!-- 詳細エリア -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!-- 円グラフ -->
                <ColumnDefinition Width="*"/>
                <!-- リスト -->
            </Grid.ColumnDefinitions>

            <!-- 円グラフ -->
            <lvc:PieChart Grid.Column="0" Margin="10,0,5,10"
                      x:Name="PieChart"/>

            <!-- リスト表示 -->
            <ListView Grid.Column="1" Margin="5,0,10,10"
                  x:Name="AppTimeListView" Background="#353b45" Foreground="#abb2bf" BorderThickness="0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="アプリケーション" Width="200" DisplayMemberBinding="{Binding AppName}"/>
                        <GridViewColumn Header="使用時間" Width="120" DisplayMemberBinding="{Binding TimeString}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</Window>
